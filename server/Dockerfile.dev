# Development Dockerfile for server
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install necessary packages
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start development server with nodemon
CMD ["npm", "run", "dev"] 